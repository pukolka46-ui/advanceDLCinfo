// Smooth scroll к секциям
function scrollToSection(id){
  document.getElementById(id).scrollIntoView({behavior:"smooth"});
}

// Animate stats (count up)
function animateStat(id, target){
  let el = document.getElementById(id), count = 0;
  let step = Math.ceil(target / 100);
  let interval = setInterval(()=>{
    count += step;
    if(count >= target){ count = target; clearInterval(interval); count = target; }
    el.textContent = count;
  },20);
}

// Запускаем анимацию с нуля (0 пока)
animateStat('stat-clients', 0);
animateStat('stat-purchases', 0);
animateStat('stat-trust', 0);

// Кнопки тарифов
document.querySelectorAll('.buy-btn').forEach(btn=>{
  btn.addEventListener('click',()=>alert('Выбран тариф!'));
});

// API fetch заголовка (если есть backend)
fetch('/message')
  .then(resp => resp.text())
  .then(text => document.getElementById('heading').textContent = text)
  .catch(()=>{}); // на случай отсутствия backend
